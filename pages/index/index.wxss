/* pages/index/index.wxss */
/* 轮播图 */
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 导航区 */
.navContainer {
    display: flex;
    /* background-color: rgb(228, 228, 228);
    border-radius: 20rpx;
    margin: 10rpx; */
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: center; */
    width: 20%;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    font-size: 50rpx;
    background-color: #f8f8f8;
    margin: 20rpx 0;
}

.navItem text {
    font-size: 26rpx;
}

/* 导航区的每日推荐第一首歌 */
.recSongDetail {
    background-color: rgb(228, 228, 228);
    border-radius: 30rpx;
    display: flex;
    margin: 30rpx 10rpx 0rpx 10rpx;
    align-items: center;
    height: 120rpx;
    width: 700rpx;
}

.recSongImg {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    margin-left: 10rpx;
    /* margin-top: 50rpx; */
}

.musicInfo {
    margin-left: 0rpx;
    width: 400rpx;
    height: 80rpx;
    display: flex;
    /* margin-top: 50rpx; */
    padding: 0 20rpx;
    line-height: 80rpx;
}

.musicInfo .musciName {
    font-size: 35rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    max-width: 250rpx;
}

.musicInfo .musicSinger {
    font-size: 24rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    max-width: 200rpx;
}

.recSongImg image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.iconPic {
    font-size: 50rpx;
}
/* .iconfont icon-bofang {
    font-size: 20rpx;
} */

/* 推荐歌曲 */
.recommenScroll {
    display: flex;
    height: 300rpx;
}

.recommenContainer {
    padding: 10rpx 20rpx;
}

.recommenContainer .header .title {
    font-size: 28rpx;
    line-height: 80rpx;
    color: #575555;
}


.recommenContainer .header .more {
    height: 20rpx;
    float: right;
    border: 1rpx solid #333;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 20rpx;
    border-radius: 30rpx;
}

.scrollItem {
    width: 200rpx;
    margin: 10rpx 20rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    font-size: 26rpx;

    /* 两行过后用省略号代替超出的内容 */
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    /* white-space: nowrap; */
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 排行榜 */
/* .topList {
    padding: 10rpx 20rpx;
} */
.topListSwiper {
    height: 450rpx;
}

.swiperItem {
    width: 96%;
    font-size: 30rpx;
    line-height: 80rpx;
    margin: 10rpx 20rpx;
    /* background-color: #fbfbfb; */
}

.musicItem {
    display: flex;
    margin: 10rpx 0;
}

.musicItem image {
    /* display: block; */
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
}

.musicItem .nusicName {
    display: block;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 30rpx;
}

.tuijian {
    margin: 10rpx 20rpx;
}

.topListSwiper .title {
    font-size: 35rpx;
}