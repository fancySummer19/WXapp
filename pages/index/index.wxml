<!--pages/index/index.wxml-->
<view>
    <!-- 轮播图 -->
    <swiper class="indexContainer" indicator-dots="ture" autoplay circular>
        <swiper-item class="banners" wx:for="{{bannerList}}" wx:key="bannerId">
            <image src="{{item.pic}}" />
        </swiper-item>
    </swiper>
    <!-- 图标导航区域 -->
    <view class="navContainer">
        <view class="navItem">
            <text class="iconfont icon-icon"></text>
            <text>每日推荐</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-gedan"></text>
            <text>歌单</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-paihangbang"></text>
            <text>排行榜</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-diantai"></text>
            <text>电台</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-15"></text>
            <text>直播</text>
        </view>
    </view>
    <!-- 推荐歌曲头部 -->
    <view class="recommenContainer">
        <view class="header">
            <text class="title">推荐歌曲</text>
            <view>
                <text>为你精心推荐</text>
                <text class="more">查看更多</text>
            </view>
        </view>
    </view>
    <!-- 推荐歌曲的内容 -->
    <scroll-view class="recommenScroll" enable-flex="true" scroll-x="true">
        <view class="scrollItem" wx:for="{{recommendList}}" wx:key="id">
            <image src="{{item.picUrl}}"/>
            <text>{{item.name}}</text>
        </view>
    </scroll-view>
</view>