<!--pages/index/index.wxml-->
<view>
    <!-- 轮播图 -->
    <swiper class="indexContainer" indicator-dots="ture" autoplay circular>
        <swiper-item class="banners" wx:for="{{bannerList}}" wx:key="bannerId">
            <image src="{{item.pic}}" />
        </swiper-item>
    </swiper>
    <!-- 图标导航区域 -->
    <view class="navContainer">
        <view class="navItem">
            <text class="iconfont icon-icon"></text>
            <text>每日推荐</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-gedan"></text>
            <text>歌单</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-paihangbang"></text>
            <text>排行榜</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-diantai"></text>
            <text>电台</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-15"></text>
            <text>直播</text>
        </view>
    </view>
    <!-- 推荐歌曲头部 -->
    <NavHeader title='推荐歌曲' nav="猜你喜欢"></NavHeader>
    <!-- 推荐歌曲的内容 -->
    <scroll-view class="recommenScroll" enable-flex="true" scroll-x="true">
        <view class="scrollItem" wx:for="{{recommendList}}" wx:key="id">
            <image src="{{item.picUrl}}" />
            <text>{{item.name}}</text>
        </view>
    </scroll-view>

    <!-- 排行榜 -->
    <view>
        <!-- 排行榜区域头部 -->
        <NavHeader title='排行榜' nav="热歌风向标"></NavHeader>
        <!-- 排行榜的内容 -->
        <swiper class="topListSwiper" next-margin="50rpx">
            <swiper-item class="swiperItem" wx:for="{{topList}}" wx:key="name">
                <view class="title">{{item.name}}</view>
                <view class="musicItem" wx:for="{{item.tracks}}" wx:key="first" wx:for-item="musics">
                    <image src="/static/images/截屏2021-09-13 下午3.37.22.png" mode="" />
                    <view class="count">{{index+1}}</view>
                    <text class="nusicName">{{musics.first}}</text>
                    <text class="musicSinger" decode="{{true}}">-&nbsp;{{musics.second}}</text>
                </view>
            </swiper-item>
        </swiper>
    </view>

</view>