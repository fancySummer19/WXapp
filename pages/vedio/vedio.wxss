/* pages/vedio/vedio.wxss */
/* 搜索框 */
.header {
    display: flex;
    justify-content: center;

}

.searchBar {
    width: 100%;
}

/* 热搜榜 */
.topListSwiper {
    height: 2000rpx;
}

.swiperItem {
    width: 80%;
    font-size: 30rpx;
    line-height: 80rpx;
    margin: 10rpx 20rpx;
    /* border: black solid 1rpx; */
    /* background-color: rgb(221, 221, 221); */
    /* background-color: #fbfbfb; */
}

.musicItem {
    width: 95%;
    background-color: rgb(243, 243, 243);
    display: flex;
}
.musicItem:last-child {
    border-radius: 0 0 20rpx 20rpx;
}

.musicItem .count {
    display: block;
    margin: 0 10rpx;
}

.musicItem image {
    /* display: block; */
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
}

.musicItem .nusicName {
    width: 100%;
    display: block;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 30rpx;
}

.topListSwiper .title {
    width: 95%;
    background-color: rgb(221, 221, 221);
    border-radius: 20rpx 20rpx 0 0;
}
.titleContent {
    font-size: 35rpx;
    display: block;
    padding: 0 10rpx; 
}