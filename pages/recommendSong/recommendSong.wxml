<!--pages/recommendSong/recommendSong.wxml-->
<view class="recommendSongContainer">
    <!-- 头部 -->
    <view class="header">
        <image src="{{recommendSongs[0].al.picUrl}}"/>
        <view class="shadowOne">
            <view class="date">
                <text class="day">{{day}}</text>
                <text class="month">/{{month}}</text>
            </view>
        </view>
    </view>
    <!-- 列表 -->
    <view class="listContainer">
        <view class="listHeader">
            <text>播放全部</text>
            <text class="changeMore">多选</text>
        </view>
        <!-- 内容 -->
        <scroll-view scroll-y class="listScroll" wx:for="{{recommendSongs}}" wx:key="id" bindtap="toSongDetail" data-song="{{item}}"> 
            <view class="scrollItem">
                <image src="{{item.al.picUrl}}" />
                <view class="musicInfo">
                    <text class="musicName">{{item.name}}</text>
                    <text class="author">{{item.ar[0].name}}-{{item.al.name}}</text>
                </view>
                <text class="iconfont icon-gengduo-shuxiang"></text>
            </view>
        </scroll-view>
    </view>
</view>
